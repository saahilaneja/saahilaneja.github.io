<style>
	.page {
		display: flex;
		flex-direction: column;
		gap: 2.25rem;
	}

	.page-header h1 {
		font-size: clamp(1.4rem, 3vw, 2rem);
		margin-bottom: 0.4rem;
	}

	.page-header p {
		color: var(--text-secondary);
		font-size: 1.05rem;
		max-width: 36rem;
	}

	.section {
		display: flex;
		flex-direction: column;
		gap: 1.1rem;
	}

	.section + .section {
		border-top: 1px solid rgba(255, 255, 255, 0.08);
		padding-top: 1.5rem;
	}

	.section h2 {
		font-size: 1.1rem;
		letter-spacing: 0.06em;
		text-transform: uppercase;
		color: var(--text-secondary);
	}

	.role-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
		gap: 1.1rem;
	}

	.role {
		border-radius: 0.75rem;
		border: 1px solid rgba(255, 255, 255, 0.08);
		padding: 1rem 1.1rem;
		background: var(--bg-medium);
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}

	.role-header h3 {
		font-size: 1.05rem;
		text-transform: lowercase;
	}

	.meta {
		color: var(--text-secondary);
		font-size: 0.95rem;
		margin-top: 0.15rem;
	}

	.blurb {
		font-size: 1rem;
	}

	.bullets {
		margin-left: 1.2rem;
		display: flex;
		flex-direction: column;
		gap: 0.25rem;
		font-size: 0.98rem;
	}

	.snapshot {
		list-style: none;
		display: flex;
		flex-direction: column;
		gap: 0.4rem;
	}

	.label {
		display: inline-block;
		min-width: 7rem;
		color: var(--text-secondary);
	}

	.value {
		color: var(--text-primary);
	}

	.page-footer {
		display: flex;
		justify-content: center;
		align-items: center;
		gap: 0.5rem;
		font-size: 1rem;
		color: var(--text-secondary);
		margin-top: 1.5rem;
	}
</style>

